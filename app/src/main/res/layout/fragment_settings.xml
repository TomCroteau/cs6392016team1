<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ronyalvarez.eventage.SettingsActivityFragment"
    tools:showIn="@layout/activity_settings">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:id="@+id/textView"
        android:textSize="@dimen/title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enable_GPS"
        android:id="@+id/chkGPS"
        android:textSize="@dimen/items"
        android:checked="true"
        android:layout_marginTop="66dp"
        android:layout_below="@+id/chkSMS"
        android:layout_alignLeft="@+id/chkSMS"
        android:layout_alignStart="@+id/chkSMS" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enable_SMS"
        android:id="@+id/chkSMS"
        android:layout_marginTop="72dp"
        android:textSize="@dimen/items"
        android:checked="true"
        android:layout_below="@+id/chkPhone"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enable_phone"
        android:id="@+id/chkPhone"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/chkSMS"
        android:layout_alignStart="@+id/chkSMS"
        android:layout_marginTop="41dp"
        android:textSize="@dimen/items"
        android:checked="true" />

</RelativeLayout>
